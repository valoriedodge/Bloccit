<h2>Sign Up Confirmation </h2>
<h4>Are you sure these values are correct? </h4>
<div class="row">
  <div class="col-md-8">
  <div>Name: <%= @user.name %></div>
  <div>Email: <%= @user.email %> </div>
  </div>
</div>
<div class="row">
  <div class="col-md-2">
    <%= button_to "Yes", {controller: "users", action: "create", params: params}, class: 'btn btn-success' %>
  </div>
  <div class="col-md-2">
    <%= button_to "No", {controller: "users", action: "new"}, class: 'btn btn-failure', :method => :get%>
  </div>
</div>
